custom_blue = #279AF1
custom_red_1 = #F71735
custom_red_2 = #ED1C24
custom_gray_1 = #BFC0C0
custom_gray_2 = #D3D0CB
custom_gray_3 = #797979

html, body
  height: 100%
  margin: 0
  padding: 0
body
  font-family: sans-serif
  font-size: 16px
a
  color: inherit
  text-decoration: none
  display: inline-block
input, button
  font-size: 16px

#app
  position: relative
  height: 100%
  >div
    height: 100%

.travel_app
  overflow: auto

.no_hotels
  font-size: 24px
  font-weight: bold
  text-align: center
  color: custom_gray_1

.hotel
  border: 1px solid custom_gray_2
  border-radius: 5px
  box-sizing: border-box
  margin: 10px 5px
  padding: 5px
  overflow: hidden
  word-wrap: break-word
  position: relative
  >img
    width: 133px//people with devicePixelRatio = 3 will be able to see high quality pictures
    max-height: 133px//in case of any bugs in server side
    display: block
    float: left
    border-radius: 3px
    margin-right: 5px
  >div:nth-of-type(1)
    font-weight: bold
    padding: 5px

.filter_hotels
  padding: 20px
  padding-top: 0
  text-align: center
  input
    box-sizing: border-box
    border: 1px solid custom_gray_1
    width: 160px
    height: 24px
    display: block
    border-radius: 5px
    padding-left: 10px
  input:nth-of-type(1)
    margin-bottom: 5px
  select
    height: 24px
  >p
    padding: 20px
    font-size: 20px
    font-weight: bold
  >form
    display: inline-block
  form>div, >div
    display: inline-block
    text-align: left
    padding: 5px
    vertical-align: top
